# ===================================
# STAGING ENVIRONMENT VARIABLES
# For deployment to Render.com
# ===================================

# Server Configuration
NODE_ENV=production
PORT=5000

# Database (MongoDB Atlas with Replica Set)
# Example: mongodb+srv://username:password@cluster.mongodb.net/superapp_staging?retryWrites=true&w=majority&readPreference=primary
DATABASE_URI=mongodb+srv://<USERNAME>:<PASSWORD>@<CLUSTER>.mongodb.net/superapp_staging?retryWrites=true&w=majority

# JWT Authentication
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=<GENERATE_SECURE_64_BYTE_HEX_STRING>
JWT_EXPIRES_IN=7d

# Socket.io Configuration
ENABLE_SOCKET_IO=true
SOCKET_CORS_ORIGIN=https://superapp-web-staging.onrender.com,http://localhost:3000

# Sentry Error Tracking
# Get from: https://sentry.io/settings/projects/your-project/keys/
SENTRY_DSN=<YOUR_SENTRY_DSN_HERE>
SENTRY_ENVIRONMENT=staging
SENTRY_TRACES_SAMPLE_RATE=0.2

# Telegram Ops Bot
# Get token from: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=<YOUR_BOT_TOKEN_HERE>
# Get your chat ID from: https://t.me/userinfobot
TELEGRAM_ADMIN_CHAT_ID=<YOUR_TELEGRAM_USER_ID_HERE>
TELEGRAM_ALERTS_ENABLED=true

# PM2 Configuration
PM2_INSTANCES=2
PM2_PUBLIC_KEY=<OPTIONAL_PM2_PLUS_KEY>
PM2_SECRET_KEY=<OPTIONAL_PM2_PLUS_SECRET>

# Staging-Specific Features
IS_STAGING=true
DISABLE_REAL_PAYOUTS=true
ENABLE_COIN_FAUCET=true
STAGING_FAUCET_AMOUNT=10000

# Logging
LOG_LEVEL=debug
LOG_MAX_FILES=7
LOG_MAX_SIZE=10m

# Rate Limiting (Relaxed for staging)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=200

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=<GENERATE_SECURE_SESSION_SECRET>

# CORS
CORS_ORIGIN=https://superapp-web-staging.onrender.com,http://localhost:3000

# Health Check
HEALTH_CHECK_PATH=/api/health

# Database Connection Pool
DB_MIN_POOL_SIZE=5
DB_MAX_POOL_SIZE=20

# ===================================
# INSTRUCTIONS FOR DEPLOYMENT
# ===================================
# 1. Copy this file to .env.staging
# 2. Replace all <PLACEHOLDER> values with real credentials
# 3. Add these as environment variables in Render dashboard
# 4. NEVER commit this file with real credentials
# 5. Use Render's "Sync from .env" feature for local testing
