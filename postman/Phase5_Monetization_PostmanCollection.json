    {
      "name": "03. Premium Content",
      "item": [
        {
          "name": "Create Premium Content",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    pm.collectionVariables.set('content_id', pm.response.json().content._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Test Premium Content\",\n  \"description\": \"This is test premium content for integration testing\",\n  \"price_coins\": 500,\n  \"category\": \"education\",\n  \"mediaType\": \"video\",\n  \"fullMediaUrl\": \"https://cdn.test.com/video.mp4\",\n  \"previewMediaUrl\": \"https://cdn.test.com/preview.mp4\",\n  \"tags\": [\"test\", \"premium\", \"video\"]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/premium/create",
              "host": ["{{base_url}}"],
              "path": ["api", "premium", "create"]
            }
          }
        },
        {
          "name": "Publish Content",
          "request": {
            "method": "PUT",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/premium/{{content_id}}/publish",
              "host": ["{{base_url}}"],
              "path": ["api", "premium", "{{content_id}}", "publish"]
            }
          }
        },
        {
          "name": "Browse Premium Content",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/premium/browse?category=education&sort=recent&page=1&limit=20",
              "host": ["{{base_url}}"],
              "path": ["api", "premium", "browse"],
              "query": [
                {"key": "category", "value": "education"},
                {"key": "sort", "value": "recent"},
                {"key": "page", "value": "1"},
                {"key": "limit", "value": "20"}
              ]
            }
          }
        },
        {
          "name": "Get Content Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/premium/{{content_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "premium", "{{content_id}}"]
            }
          }
        },
        {
          "name": "Unlock Premium Content",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"idempotencyKey\": \"{{$guid}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/premium/{{content_id}}/unlock",
              "host": ["{{base_url}}"],
              "path": ["api", "premium", "{{content_id}}", "unlock"]
            }
          }
