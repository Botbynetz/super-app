        {
          "name": "Get Preview",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/premium/{{content_id}}/preview",
              "host": ["{{base_url}}"],
              "path": ["api", "premium", "{{content_id}}", "preview"]
            }
          }
        }
      ]
