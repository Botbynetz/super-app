                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"creatorId\": \"{{creator_id}}\",\n  \"tierId\": \"monthly\",\n  \"idempotencyKey\": \"{{$guid}}\",\n  \"autoRenew\": true\n}",
              "options": {
                "raw": {
