{
  "name": "super-app-backend",
  "version": "1.0.0",
  "description": "Backend untuk Super App Talent-Ekonomi",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "pm2 start ecosystem.config.js --env production",
    "dev": "nodemon server.js",
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "test:unit": "jest tests/unit/ --runInBand",
    "test:integration": "jest tests/integration/ --runInBand --detectOpenHandles --forceExit",
    "test:integration:watch": "jest tests/integration/ --watch",
    "test:coverage": "jest --coverage --runInBand --detectOpenHandles --forceExit",
    "test:integration:coverage": "jest tests/integration/ --coverage --runInBand --detectOpenHandles --forceExit",
    "test:unlock": "jest tests/integration/unlock_flow.test.js --runInBand --detectOpenHandles --forceExit",
    "test:subscription": "jest tests/integration/subscription_flow.test.js --runInBand --detectOpenHandles --forceExit",
    "test:fraud": "jest tests/integration/fraud_flow.test.js --runInBand --detectOpenHandles --forceExit",
    "test:socket": "jest tests/integration/socket_events.test.js --runInBand --detectOpenHandles --forceExit",
    "test:revenue": "jest tests/integration/revenue_settlement.test.js tests/integration/payout_flow.test.js --runInBand --detectOpenHandles --forceExit",
    "test:payout": "jest tests/integration/payout_flow.test.js --runInBand --detectOpenHandles --forceExit",
    "test:gift": "jest tests/integration/gift_flow.test.js --runInBand --detectOpenHandles --forceExit",
    "test:middleware": "jest tests/unit/middleware/ --runInBand",
    "test:concurrency": "jest tests/concurrency/ --runInBand --detectOpenHandles --forceExit --testTimeout=60000",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:middleware",
    "load-test": "artillery run load-tests/artillery-config.yml",
    "load-test:quick": "artillery quick --duration 30 --rate 10 https://superapp-backend-staging.onrender.com/api/health",
    "loadtest": "artillery run scripts/loadtest/artillery-config.yml",
    "loadtest:quick": "artillery run scripts/loadtest/artillery-config.yml --config '{\"phases\":[{\"duration\":60,\"arrivalRate\":10}]}'",
    "docker:build": "docker build -t superapp-backend .",
    "docker:run": "docker run -p 5000:5000 --env-file .env.staging superapp-backend",
    "migrate:indexes": "node migrations/phase7_add_indexes.js",
    "migrate:rollback": "node migrations/phase7_add_indexes.js rollback"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "socket.io": "^4.6.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "twilio": "^4.19.0",
    "axios": "^1.6.0",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^7.1.5",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "@sentry/node": "^7.100.0",
    "@sentry/profiling-node": "^1.3.0",
    "@pm2/io": "^5.0.2",
    "pm2": "^5.3.0",
    "redis": "^4.6.0",
    "ioredis": "^5.3.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "socket.io-client": "^4.6.0",
    "@types/jest": "^29.5.8",
    "artillery": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
